{
  "manifest_version": 3,
  "name": "Lumenfall AI Image Studio",
  "description": "Generate and edit AI images directly in Chrome. 60+ models, brainstorm mode, local gallery. Free models available.",
  "version": "0.1",
  "homepage_url": "https://lumenfall.ai",
  "icons": {
    "16": "assets/icon-16.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },
  "action": {
    "default_title": "Lumenfall AI Image Studio"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "unlimitedStorage",
    "activeTab",
    "scripting",
    "contextMenus",
    "sidePanel",
    "tabs"
  ],
  "host_permissions": [
    "https://api.lumenfall.ai/*"
  ],
  "optional_host_permissions": [
    "https://*/*"
  ],
  "side_panel": {
    "default_path": "popup.html"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "Command+Shift+L"
      },
      "description": "Open Lumenfall AI Image Studio"
    }
  }
}
